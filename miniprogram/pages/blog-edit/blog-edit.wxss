.container{
  padding: 20rpx;
}

.content{
  width: 100%;
  height: 360rpx;
  box-sizing: border-box;
}

.footer{
  position: fixed;
  /* bottom: 0; */
  left: 0;
  display: flex;
  align-items: center;
  background-color: #f1f1f1;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.footer .num{
  flex: 1;
  text-align: right;
  padding-right: 30rpx;
  color: #474747;
  font-size: 32rpx;
}



/* 图片区域 */
.image_container{
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.image_wrap{
  position: relative;
  width: 220rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}

.image{
  width: 100%;
  height: 100%;
}

.icon-chuyidong{
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  font-size: 38rpx;
  background-color: #000;
  opacity: 0.3;
  border-radius: 5rpx;
  text-align: center;
  line-height: 40rpx;
}

.select_image{
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px dashed #ccc;
}

.icon-jiahao{
  font-size: 50rpx;
  color: #ccc;
}

.footer .publish_btn{
  background-color: #d43c43;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 10rpx;
}