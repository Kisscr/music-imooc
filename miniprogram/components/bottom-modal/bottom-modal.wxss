.container{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, .6);
  z-index: 100;
}
.panel{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  min-height: 300rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}
.icon-chuyidong{
  position: absolute;
  right: 5rpx;
  top: 5rpx;
  font-size: 40rpx;
  padding: 10rpx;
  z-index: 2;
}