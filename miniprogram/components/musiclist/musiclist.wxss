.container{
  background-color: #f2eff2;
  display: flex;
  align-items: center;
  padding: 15rpx 15rpx 15rpx 0;
  /* border-bottom: 1px solid #ccc; */
}
.musiclist_index{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 30rpx;
}
.musiclist_info{
  flex: 7;
  display: flex;
  width: 0;
  flex-direction: column;
  justify-content: center;
}
.musiclist_info .musiclist_name{
  font-size: 30rpx;
  font-weight: 400;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.musiclist_info .musiclist_name .song_alia{
  color: #666;
  font-size: 28rpx;
}
  
.musiclist_info .album{
  font-size: 24rpx;
  color: #666;
  line-height: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.playing .musiclist_index, 
.playing .musiclist_info .musiclist_name,
.playing .musiclist_info .song_alia,
.playing .musiclist_info .album{
  color: #d43c43;
}