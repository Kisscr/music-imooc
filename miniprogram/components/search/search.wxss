.container {
  display: flex;
  margin-left: 20rpx;
  align-items: center;
  position: relative;
}

.search {
  flex: 1;
  height: 68rpx;
  background-color: #f5f5f5;
  border-radius: 50rpx;
  padding-left: 60rpx;
}

.placeholder {
  color: #999;
}

.search_txt {
  background-color: #d43c43;
  color: #fff;
  font-size: 24rpx;
  margin-left: 20rpx;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
}

.find{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 16rpx;
  color: #999;
  font-size: 34rpx;
}